<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
     <include layout="@layout/head"/>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/circle1"
                android:background="@drawable/green"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle1"
                android:textColor="#02c3ad"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="车辆使用分配"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/line_two"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/circle2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:background="@drawable/grey"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle2"
                android:layout_marginTop="30dp"
                android:textColor="#dedede"
                android:layout_centerHorizontal="true"
                android:text="车辆选择"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:id="@+id/line_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/circle3"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:scaleType="centerInside"
                android:background="@drawable/grey"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle3"
                android:textColor="#dedede"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="分配确定"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_border">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text="使用人/仓库"/>
        </LinearLayout>

        <LinearLayout
           android:id="@+id/assign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:id="@+id/assign_object_name"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:hint="员工工号/仓库名"
                android:textColorHint="@color/hint"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/car_arrangement_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/save_button"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#fafdff"
            android:text="下一步" />
    </LinearLayout>
</LinearLayout>