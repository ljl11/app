<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f5"
    android:orientation="vertical" >

    <include layout="@layout/head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="车牌号"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/car_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="车牌号"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="任务时间"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/car_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="时间时间"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="任务类型"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/task_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="任务类型"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pickUpType"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:id="@+id/send_type"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="派送状态"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="派送中"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>
            
            <LinearLayout android:id="@+id/pickUpInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:background="#f2f5f5"
                android:gravity="center_vertical"
                android:hint="取车信息"
                android:paddingLeft="20dp"
                android:textColorHint="#dedede"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="取车地点"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/car_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="取车地址"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>
           

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="联系方式"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vehicleCollectorPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="15858585858"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/callVehicleCollectorPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/call_phone" />
                </LinearLayout>
            </LinearLayout>
            
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:background="#f2f5f5"
                android:gravity="center_vertical"
                android:hint="送车信息"
                android:paddingLeft="20dp"
                android:textColorHint="#dedede"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="送车地址"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/car_resource"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#fff" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="联系方式"
                    android:textColor="#9f9f9f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/carDeliveryrPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="15858585858"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/callCarDeliveryrPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/call_phone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f5f5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sure_lead_car"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/save_button"
                    android:gravity="center"
                    android:text="领车"
                    android:textColor="#fafdff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/transform"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/save_button"
                    android:gravity="center"
                    android:text="转交"
                    android:textColor="#fafdff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/backUp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/text_view_border_small"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="#02c3ad"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>