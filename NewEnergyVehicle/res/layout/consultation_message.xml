<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#f2f5f5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/consult_back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#fff"
                android:text="咨询详情"
                android:textColor="#666666"
                android:textSize="19dp" >
            </TextView>

            <TextView
                android:id="@+id/consult_head_divider"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#f2f5f5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/head_image"
                android:src="@drawable/head_image" />

            <TextView
                android:id="@+id/original_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="啦啦啦"
                android:textColor="#9f9f9f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="发表于"
                android:textColor="#9f9f9f" />

            <TextView
                android:id="@+id/release_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2017/3/4"
                android:textColor="#9f9f9f" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/toplink" />

                <TextView
                    android:id="@+id/consultation_btt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="置顶"
                    android:textColor="#5dd4c6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/hot_link" />

                <TextView
                    android:id="@+id/consultation_hot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="热门"
                    android:textColor="#f0b289" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/release_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="咨询服务怎么提问啊？"
                android:textColor="#333"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/release_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="咨询服务一直没搞懂，到底怎么提问？咨询服务一直没搞懂，到底怎么提问？？？？到底是咋样的？？到底怎么提问？"
                android:textColor="#9f9f9f"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#f2f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/thumbs_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/give_the_thumbs_up"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/support"
                        android:src="@drawable/support" />

                    <TextView
                        android:id="@+id/give_the_thumbs_up_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="@string/support_number"
                        android:textColor="@color/colorTitle"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/point_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/on_the_point_of"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@string/against"
                        android:src="@drawable/against" />

                    <TextView
                        android:id="@+id/on_the_point_of_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="@string/support_number"
                        android:textColor="@color/colorTitle"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/talk"
                        android:src="@drawable/message" />

                    <TextView
                        android:id="@+id/comment_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/support_number"
                        android:textColor="@color/colorTitle"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f2f5f5" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/information"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#2fc0b0"
                android:textSize="15dp"
                android:text="评论列表"/>
        </LinearLayout>

        <com.example.util.refreshListView.XListView
            android:id="@+id/list_consultation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ffffff"
            android:orientation="vertical"
            android:scrollbars="none" >
        </com.example.util.refreshListView.XListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infomation_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/reply" />
    </LinearLayout>

</RelativeLayout>