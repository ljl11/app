<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/head" />

    <LinearLayout
        android:id="@+id/fault_handling_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#02c3ad"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dip"
                    android:layout_marginTop="15dip"
                    android:textColor="#ffffff"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="26dip"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/finished_processing"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circular_button"
                    android:text="处理完毕"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f2f5f5" >
        </LinearLayout>
        
    </LinearLayout>

    <com.example.newenergyvehicle.salesPersonnel.InnerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f5f5"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/fault_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fault_info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="申报人    ："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fault_applicant"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="客户名称："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/applicant_company"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="联系电话："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />
				<RelativeLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent">
				     <TextView
                        android:id="@+id/fault_number"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                    <ImageView 
                        android:id="@+id/callPhone"
                        android:layout_toRightOf="@+id/fault_number"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/call_phone"/>
				</RelativeLayout>
                   
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="申报时间："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fault_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="故障地点："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fault_place"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:text="故障描述："
                        android:textColor="#9f9f9f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fault_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxEms="30"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fault_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/picture_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp" >

                    <com.example.newenergyvehicle.salesPersonnel.HorizontalScrollViewEx
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_vertical"
                        android:background="#f2f5f5"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:id="@+id/id_gallery_falut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </com.example.newenergyvehicle.salesPersonnel.HorizontalScrollViewEx>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/no_picture"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无图片"
                        android:textColor="#9f9f9f"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fault_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/handling_history" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_emergency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f5f5" >

                    <com.example.util.refreshListView.XListView
                        android:id="@+id/listEmergency"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000"
                        android:dividerHeight="1dp"
                        android:listSelector="#00000000"
                        android:orientation="vertical"
                        android:scrollbars="none" >
                    </com.example.util.refreshListView.XListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#f2f5f5" >

                    <com.example.util.refreshListView.XListView
                        android:id="@+id/history_list"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000"
                        android:dividerHeight="1dp"
                        android:listSelector="#00000000"
                        android:orientation="vertical" >
                    </com.example.util.refreshListView.XListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/no_history"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无数据"
                        android:textColor="#9f9f9f"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.example.newenergyvehicle.salesPersonnel.InnerScrollView>

</LinearLayout>