<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alerk"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="#f0f0f0"
        android:gravity="center"
        android:textColor="#a3a3a3"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f5f5" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="42" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/is_read"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#02c3ad"
                        android:gravity="center"
                        android:text="未读"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:text="你是不傻你是不傻你是不傻你是不傻你是不傻你是不傻你是不傻"
                            android:textColor="#02c3ad"
                            android:textSize="16dp" />
                    </LinearLayout>
                  
                </LinearLayout>
		
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textViewForTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:text="类型："
                            android:textColor="#a3a3a3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/textViewForTime"
                            android:textColor="#d6a22d"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textViewForTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:text="时间："
                            android:textColor="#a3a3a3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/notice_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/textViewForTime"
                            android:textColor="#d6a22d"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textViewForConyent"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:text="内容："
                            android:textColor="#a3a3a3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/ncontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/textViewForConyent"
                            android:ellipsize="end"
                            android:maxEms="20"
                            android:maxLines="1"
                            android:textColor="#666"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
		 <LinearLayout 
		    android:id="@+id/moreOperations"
		    android:layout_width="25dp"
		    android:layout_height="25dp"
		    android:layout_gravity="right"
		    android:layout_marginRight="5dp"
		    android:layout_marginTop="15dp">
		     <ImageView
		           android:layout_marginTop="5dp"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:src="@drawable/more_operations" />
		</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>