<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#ffffff"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/search_plate_number_edit"
                android:imeOptions="actionSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/mywork_search"
                android:drawableLeft="@drawable/searchpng"
                android:drawablePadding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#cacaca"
                android:textSize="15dp"
                android:hint="搜索" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cancel_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="取消"
            android:textColor="#02c3ad"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f5f5" />

    <com.example.util.refreshListView.XListView
        android:id="@+id/platenumber_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:orientation="vertical" >
    </com.example.util.refreshListView.XListView>

</LinearLayout>