<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f5"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_marginTop="15dp">
    	    <LinearLayout
    	        android:id="@+id/car_item"
    	        android:layout_width="match_parent"
    	        android:layout_height="140dp"
    	        android:background="@drawable/vehicle_border"
    	        android:orientation="vertical">
    	        <LinearLayout
    	            android:id="@+id/car_bg"
    	            android:layout_width="match_parent"
    	            android:layout_height="0dp"
    	            android:layout_weight="0.57"
    	            android:orientation="vertical"
    	            android:paddingTop="5dp"
    	             android:paddingBottom="5dp"
    	            android:background="@drawable/ele_bg" >
    	            <RelativeLayout
                		android:layout_width="match_parent"
                		android:layout_height="0dp"
                		android:layout_weight="1.2">     

							<TextView
							    android:id="@+id/car_num"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:text="渝A8888"
							    android:layout_centerVertical="true"
							     android:layout_alignParentLeft="true"
							    android:textColor="#fff"
							      android:layout_marginLeft="10dp"
							    android:textSize="16dp" >
							    
							</TextView>
							
							 <ImageView
							  android:id="@+id/car_online"
    	                     android:layout_width="46dp"
                    		 android:layout_height="21dp"
    	                     android:background="@drawable/offline"
    	                     android:layout_toRightOf="@+id/car_num"
    	                     android:layout_centerVertical="true"
    	                      android:layout_marginLeft="5dp" />
							
							<ImageView
							  android:id="@+id/car_lock"
    	                     android:layout_width="17dp"
                    		 android:layout_height="17dp"
    	                     android:background="@drawable/car_lock"
    	                     android:layout_centerVertical="true"
    	                      android:layout_marginLeft="5dp"
    	                     android:layout_toRightOf="@+id/car_online">
    	                </ImageView>
    	                
						

							
					 </RelativeLayout> 
					 
    	             <RelativeLayout
    	                 android:layout_width="match_parent"
                		android:layout_height="0dp"
                		android:layout_marginLeft="10dp"
                		android:layout_weight="1">
							 <TextView
                		        android:id="@+id/car_mile"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_centerVertical="true"
							    android:text="100km已走"
							    android:layout_alignParentLeft="true"
							    android:textColor="#fff"
							    android:textSize="13dp" >
							</TextView>
							<TextView
							    android:id="@+id/split"
							    android:layout_width="1dp"
							    android:layout_height="14dp"
							    android:layout_toRightOf="@+id/car_mile"
							     android:layout_centerVertical="true"
							     android:layout_marginLeft="10dp"
							    android:background="#fff">
						 </TextView>
						<TextView
					 	android:id="@+id/speed"
			         	android:layout_width="wrap_content"
					 	android:layout_height="wrap_content"
					 	android:layout_toRightOf="@+id/split"
					 	android:layout_centerVertical="true"
					 	 android:layout_marginLeft="10dp"    
					 	android:text="时速 87km/s"
					 	android:textColor="#fff"
					 	android:textSize="13dp" /> 	   	
    	            </RelativeLayout>
    	             <RelativeLayout
                		android:layout_width="match_parent"
                		android:layout_height="0dp"
                		android:layout_marginLeft="10dp"
                		android:layout_weight="1.2">
    	       		 <TextView
					 android:id="@+id/car_ele"
			         android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_alignParentLeft="true"
					 android:layout_centerVertical="true"
					 android:layout_marginTop="5dp"    
					 android:text="86%电量"
					 android:textColor="#fff"
					 android:textSize="13dp" /> 	   	
    	         </RelativeLayout>
    	        </LinearLayout>

    	        <LinearLayout
    	            android:layout_width="match_parent"
    	            android:layout_height="0dp"
    	            android:layout_weight="0.5"
    	            android:background="#fff"
    	            android:layout_gravity="center_vertical">

    	            <LinearLayout
    	                android:layout_width="0dp"
    	                android:layout_height="match_parent"
    	                android:layout_weight="1"
    	                android:orientation="vertical"
    	                android:gravity="center">
    	                <ImageView
    	                     android:id="@+id/emergency_car"
    	                     android:layout_width="18dp"
                    		android:layout_height="18dp"
    	                     android:background="@drawable/plain_car">
    	                </ImageView>
    	                <TextView
    	                    android:id="@+id/car_type"
    	                    android:layout_width="wrap_content"
    	                    android:layout_height="wrap_content"
    	                    android:textColor="#9f9f9f"
    	                    android:layout_marginTop="8dp"
    	                    android:textSize="12dp"
    	                    android:text="普通车辆">  	                    
    	                </TextView>
    	                
    	            </LinearLayout>    

    	            <LinearLayout
    	                android:layout_width="0dp"
    	                android:layout_height="match_parent"
    	                android:layout_weight="1"
    	                 android:orientation="vertical"
    	                android:gravity="center">
    	                <ImageView
    	                     android:layout_width="18dp"
                    		android:layout_height="18dp"
                    		android:id="@+id/car_state_bg"
    	                     android:background="@drawable/warning">
    	                </ImageView>
    	                <TextView
    	                    android:id="@+id/car_state"
    	                    android:layout_width="wrap_content"
    	                    android:layout_height="wrap_content"
    	                    android:textColor="#edab7f"
    	                    android:layout_marginTop="8dp"
    	                    android:textSize="12dp"
    	                    android:text="正在维修">  	                    
    	                </TextView>
    	                
    	            </LinearLayout> 
    	           <LinearLayout
    	                android:layout_width="0dp"
    	                android:layout_height="match_parent"
    	                android:layout_weight="1"
    	                 android:orientation="vertical"
    	                android:gravity="center">
    	                <ImageView
    	                     android:layout_width="18dp"
                    		android:layout_height="18dp"
                    		android:id="@+id/car_maintance_bg"
    	                     android:background="@drawable/warning">
    	                </ImageView>
    	                <TextView
    	                     android:id="@+id/car_maintance"
    	                    android:layout_width="wrap_content"
    	                    android:layout_height="wrap_content"
    	                    android:textColor="#edab7f"
    	                    android:layout_marginTop="8dp"
    	                    android:textSize="12dp"
    	                    android:text="需要保养">  	                    
    	                </TextView>
    	                
    	            </LinearLayout> 
    	             <LinearLayout
    	                android:layout_width="0dp"
    	                android:layout_height="match_parent"
    	                android:layout_weight="1"
    	                 android:orientation="vertical"
    	                android:gravity="center">
    	                <ImageView
    	                     android:layout_width="18dp"
                    		android:layout_height="18dp"
                    		 android:id="@+id/payment_bg"
    	                     android:background="@drawable/pass">
    	                </ImageView>
    	                <TextView
    	                     android:id="@+id/payment"
    	                    android:layout_width="wrap_content"
    	                    android:layout_height="wrap_content"
    	                    android:textColor="#dedede"
    	                    android:layout_marginTop="8dp"          
    	                    android:textSize="12dp"
    	                    android:text="暂无缴费">  	                    
    	                </TextView>
    	                
    	            </LinearLayout> 
    	             <LinearLayout
    	                android:layout_width="0dp"
    	                android:layout_height="match_parent"
    	                android:layout_weight="1"
    	                 android:orientation="vertical"
    	                android:gravity="center">
    	                <ImageView
    	                     android:layout_width="18dp"
                    		android:layout_height="18dp"
                    		 android:id="@+id/illegal_bg"
    	                     android:background="@drawable/warning">
    	                </ImageView>
    	                <TextView
    	                     android:id="@+id/illegal"
    	                    android:layout_width="wrap_content"
    	                    android:layout_height="wrap_content"
    	                    android:textColor="#edab7f"
    	                    android:layout_marginTop="8dp"
    	                    android:textSize="12dp"
    	                    android:text="存在违章">  	                    
    	                </TextView>   	                
    	            </LinearLayout> 
    	        </LinearLayout>
    	    </LinearLayout>
    </LinearLayout> 
</LinearLayout>